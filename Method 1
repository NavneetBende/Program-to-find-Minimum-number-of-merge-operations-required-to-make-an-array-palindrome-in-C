#include<stdio.h> 

int main(){

   int arr[] = {1, 4, 5, 9, 1};
   int n = sizeof(arr)/sizeof(arr[0]), count = 0;

   int i = 0, j = n-1;

   while(iarr[j])
       {
            arr[j-1] = arr[j]+arr[j-1];
            j--;
            count++;
        }
     else{
       arr[i+1] = arr[i]+arr[i+1];
       i++;
       count++;
     }
   }

   printf("Required Minimum Operations : %d", count);
}
